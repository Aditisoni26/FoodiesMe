        <div class="home ">
            <% for(list of allListing){%>
                <div class="card " style="width: 20rem; ">
                    <a href="/show/<%=list._id%>">
                <img src="<%= list.image_url %>" class=" card-img-top " alt="... ">
                <div class="card-body ">
                    <span class="card-text  category">
                            <%=list.category%>
                        </span>
                    <span class="card-text price">
                            (&#8377;<%=list.price%>)
                    </span>
                </div>
                </a>
                </div>


                <%}%>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js "></script>
        <style>
            /* Responsive category navbar */
            
            .food-nav {
                display: flex;
                flex-wrap: nowrap;
                overflow-x: auto;
                gap: 1rem;
                padding: 1rem 1.5rem;
                background: #f8f9fa;
                border-bottom: 1px solid #dee2e6;
                scroll-snap-type: x mandatory;
            }
            
            .food-nav>div {
                flex: 0 0 auto;
                text-align: center;
                scroll-snap-align: center;
                transition: transform 0.2s ease;
            }
            
            .food-nav>div:hover {
                transform: scale(1.05);
                cursor: pointer;
            }
            
            .food-nav img {
                width: 65px;
                height: 65px;
                object-fit: cover;
                border-radius: 50%;
                border: 2px solid #ccc;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
                transition: border-color 0.3s;
            }
            
            .food-nav img:hover {
                border-color: #ff6347;
                /* tomato color */
            }
            
            .food-nav span {
                display: block;
                margin-top: 6px;
                font-size: 0.9rem;
                font-weight: 600;
                color: #333;
            }
            
            @media (max-width: 576px) {
                .food-nav {
                    gap: 0.7rem;
                    padding: 0.8rem 1rem;
                }
                .food-nav img {
                    width: 55px;
                    height: 55px;
                }
                .food-nav span {
                    font-size: 0.8rem;
                }
            }
            
            onsive home cards */ .home {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 1.5rem;
                padding: 2rem;
            }
            
            .card {
                width: 100% !important;
            }
            
            .card-img-top {
                height: 180px;
                object-fit: cover;
            }
            
            @media (max-width: 576px) {
                .food-nav img {
                    width: 50px;
                    height: 50px;
                }
                .food-nav span {
                    font-size: 0.8rem;
                }
                .card-img-top {
                    height: 150px;
                }
                .home {
                    padding: 1rem;
                    gap: 1rem;
                }
            }
        </style>

    </body>

    </html>